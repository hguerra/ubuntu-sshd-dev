FROM       ubuntu:%VERSION%
MAINTAINER Heitor Carneiro

RUN apt-get update

RUN apt-get install -y openssh-server openssh-client sudo vim inotify-tools openssl python python-setuptools
RUN mkdir /var/run/sshd

RUN echo 'root:root' | chpasswd

RUN sed -ri 's/^#?PermitRootLogin\s+.*/PermitRootLogin yes/' /etc/ssh/sshd_config
RUN sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config

RUN mkdir /root/.ssh

# non root
RUN useradd vagrant
RUN echo 'vagrant:vagrant' | chpasswd
RUN usermod -aG sudo vagrant
RUN mkdir -p /home/vagrant/.ssh
RUN touch /home/vagrant/.ssh/authorized_keys
RUN echo 'ssh-rsa  vagrant insecure public key' >> /home/vagrant/.ssh/authorized_keys
RUN chown -R vagrant:vagrant /home/vagrant
RUN chown -R vagrant:vagrant /home/vagrant/.ssh/*

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

EXPOSE 22

CMD    ["/usr/sbin/sshd", "-D"]
